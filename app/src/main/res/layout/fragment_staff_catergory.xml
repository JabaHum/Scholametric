<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Fragments.StaffCatergoryFragment">

    <LinearLayout
        android:layout_margin="4dp"
        android:padding="4dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_view_staff_categories_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#000"
            android:textSize="20dp"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Staff Categories"/>
        <RadioGroup
            android:padding="2dp"
            android:layout_margin="2dp"
            android:id="@+id/staff_catergories"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/radio_class_teacher"
                android:layout_width="match_parent"
                android:text="Class Teacher"
                android:textSize="18sp"
                android:layout_height="40dp" />
            <RadioButton
                android:id="@+id/radio_director_of_studies"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:text="Director of Studies"
                android:layout_height="40dp" />
            <RadioButton
                android:id="@+id/radio_head_of_department"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:text="Head of Department"
                android:layout_height="40dp" />
            <RadioButton
                android:id="@+id/radio_dorm_master"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:text="Dormitory Master"
                android:layout_height="40dp" />
            <RadioButton
                android:id="@+id/radio_health_master"
                android:textSize="18sp"
                android:text="Health Master"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <RadioButton
                android:id="@+id/radio_administrator"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:text="Administrator"
                android:layout_height="40dp" />
            <RadioButton
                android:id="@+id/radio_sports_master"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:text="Sports Master"
                android:layout_height="40dp" />
            <RadioButton
                android:id="@+id/radio_club_patron"
                android:layout_width="match_parent"
                android:text="Club Patron"
                android:textSize="18sp"
                android:layout_height="40dp" />
            <RadioButton
                android:id="@+id/radio_student_teacher"
                android:text="Student Teacher"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:layout_height="40dp" />
            <RadioButton
                android:id="@+id/radio_extension_workers"
                android:text="Extension Workers"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:layout_height="40dp" />
        </RadioGroup>
    </LinearLayout>
    <Button
        android:padding="4dp"
        android:layout_margin="4dp"
        android:id="@+id/btn_save_settings_staff_categories"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Save Settings"/>
</LinearLayout>