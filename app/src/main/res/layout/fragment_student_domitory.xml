<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:orientation="vertical"
    tools:context=".Fragments.StudentDomitoryFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_dorm_name"
            android:text="Dormitory Name"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <EditText
            android:textSize="18sp"
            android:id="@+id/edt_dorm_name"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:textSize="18sp"
            android:text="Number Of Floors"
            android:id="@+id/txt_no_of_floors"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <EditText
            android:textSize="18sp"
            android:id="@+id/edt_no_of_floors"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:textSize="18sp"
            android:text="Dormitory Rooms"
            android:id="@+id/txt_dorm_rooms"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <EditText
            android:textSize="18sp"
            android:id="@+id/edt_dorm_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Number of Beds"
            android:id="@+id/txt_no_of_beds"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <EditText
            android:textSize="18sp"
            android:id="@+id/edt_no_of_beds"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:text="Dormitory Warden"
            android:textSize="18sp"
            android:id="@+id/txt_dorm_warden"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <EditText
            android:textSize="18sp"
            android:id="@+id/edt_dorm_warden"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_student_save_settings"
            android:layout_width="match_parent"
            android:text="save settings"
            android:layout_height="70dp" />
    </LinearLayout>

</LinearLayout>