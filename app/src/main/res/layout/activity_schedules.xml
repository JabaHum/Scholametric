<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context=".activities.Schedules">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_schedules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?actionBarSize"
        android:background="?colorPrimaryDark">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?actionBarSize"
            android:padding="2dp"
            android:weightSum="100">

            <ImageView
                android:id="@+id/toolbar_schedules_image_view"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:src="@drawable/ic_arrow_back_black_24dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/toolbar_schedules_text_view"
                android:layout_gravity="center_vertical"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:textColor="#fff"
                android:text="Schedules"
                android:textSize="24sp" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/lesson_tt_btn"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/lesson_timetable"/>
        <Button
            android:id="@+id/exam_tt_btn"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/exam_timetable"/>
        <Button
            android:id="@+id/events_btn"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/events"/>
    </LinearLayout>

</LinearLayout>