<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context=".Fragments.ClassSettingsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textview_stream"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:text="Stream"/>
        <EditText
            android:id="@+id/edt_stream"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radio_olevel"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <RadioButton
                android:id="@+id/radio_alevel"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </RadioGroup>
        <Button
            android:id="@+id/btn_add_stream"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Add Stream"/>
        <Button
            android:id="@+id/btn_save_events"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Save Events"/>
    </LinearLayout>
</LinearLayout>